{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "incremental": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "plugins": [{ "name": "next" }],
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}